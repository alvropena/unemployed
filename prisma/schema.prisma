generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscription {
  id              String    @id @default(cuid())
  userId          String    @unique    // This will store Clerk's user ID
  status          String    // active, canceled, etc.
  plan            String    // monthly, annual, lifetime
  stripeCustomerId String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId])
}

model Personal {
  id            String    @id @default(cuid())
  userId        String    // This will store Clerk's user ID
  
  // Personal information
  name          String?
  email         String?
  phone         String?
  linkedin      String?
  github        String?
  
  // Relations
  education     Education[]
  experience    Experience[]
  projects      Project[]
  skills        Skill[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

model Education {
  id           String   @id @default(cuid())
  resumeId     String
  resume       Personal   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  institution  String
  degree       String
  location     String
  startDate    DateTime
  endDate      DateTime?
  current      Boolean  @default(false)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([resumeId])
}

model Experience {
  id           String   @id @default(cuid())
  resumeId     String
  resume       Personal   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  company      String
  position     String
  location     String
  startDate    DateTime
  endDate      DateTime?
  current      Boolean  @default(false)
  responsibilityOne   String?
  responsibilityTwo   String?
  responsibilityThree String?
  responsibilityFour  String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([resumeId])
}

model Project {
  id           String   @id @default(cuid())
  resumeId     String
  resume       Personal   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  name         String
  startDate    DateTime?
  endDate      DateTime?
  current      Boolean  @default(false)
  responsibilityOne   String?
  responsibilityTwo   String?
  responsibilityThree String?
  responsibilityFour  String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([resumeId])
}

model Skill {
  id           String   @id @default(cuid())
  resumeId     String
  resume       Personal   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  name         String
  category     String   // languages, frameworks, developer_tools, libraries
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([resumeId, name]) // Prevent duplicate skills for the same resume
  @@index([resumeId])
  @@index([category])
}